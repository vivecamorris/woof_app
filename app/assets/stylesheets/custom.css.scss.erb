
/* Color codes */
$light1: #DBCEA2;
$light2: #BBA880;
$accent: #6AA174;
$accent2: #B64902;
$dark1: #5B421B;

/* General styles */
html, body {
	padding: 0;
	margin: 0;
	font-family: 'Lato', serif;
	color: $dark1;	
}

body {
	cursor: url("images/paw_cursor.png"), auto;
}

@font-face {
	font-family: 'bastillemedium';
	src: url('bastille-webfont.eot');
	src: url('bastille-webfont.eot?#iefix') format('embedded-opentype'),
	     url('bastille-webfont.woff') format('woff'),
	     url('bastille-webfont.ttf') format('truetype'),
	     url('bastille-webfont.svg#bastillemedium') format('svg');
	font-weight: normal;
	font-style: normal;
}

a {
	color: $accent;
	text-decoration: none;
	&:hover {
		color: $accent2;
	}
}

h1 {
	text-align: center;
}

p {
	text-align: center;
}



/* header */
header {
	padding: 10px;
	background-color: $light1;
	position: relative;
	height: 45px;
	border-bottom: 10px solid $accent;

}

#logo a {
	line-height: 40px;
	vertical-align: middle;
	padding-left: 5px;
	font-size: 40px;
	font-family: 'bastillemedium';
	color: $dark1;
}

#linklist {
	position: absolute;
	right: 0;
	top: 0;
	list-style-type: none;
	font-size: 16px;
	line-height: 30px;
}

#linklist li {
	display: inline-block;
	padding: 0px 10px;
}

/* homepage body */

.centered {
	display: block;
	margin: 0 auto;
	text-align: center;
	padding: 10px;
}

/* index page */

table {
	padding-top: 20px;
	text-align: center;
	margin: 0 auto;
}

td {
	padding: 5px;
	border: 2px solid $accent;
}

/* edit form */

form {
	padding: 20px;
}
