$light1: #DBCEA2;
$light2: #BBA880;
$accent: #6AA174;
$accent2: #B64902;
$dark1: #5B421B;

html, body {
	padding: 0;
	margin: 0;
	font-family: 'Arvo', serif;
	cursor: url("app/assets/images/paw_cursor.png");
}

@font-face {
	font-family: 'bastillemedium';
	src: url('bastille-webfont.eot');
	src: url('bastille-webfont.eot?#iefix') format('embedded-opentype'),
	     url('bastille-webfont.woff') format('woff'),
	     url('bastille-webfont.ttf') format('truetype'),
	     url('bastille-webfont.svg#bastillemedium') format('svg');
	font-weight: normal;
	font-style: normal;
}

header {
	padding: 10px;
	background-color: $light1;
	position: relative;
	height: 60px;

}

#logo {
	vertical-align: middle;
	line-height: 60px;
	padding: 5px;
	font-size: 40px;
	font-family: 'bastillemedium', Arial;
}

#linklist {
	position: absolute;
	right: 0;
	top: 0;
	list-style-type: none;
	font-size: 16px;
	line-height: 40px;
	padding: 5px;
}

#linklist li {
	display: inline-block;
	padding: 0px 10px;
	vertical-align: middle;
}

a {
	color: $accent2;
	text-decoration: none;
	&:hover {
		color: $accent;
	}
}

h1 {
	text-align: center;
}

p {
	text-align: center;
}